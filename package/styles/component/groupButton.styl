@import '../common/mixin.styl'
@import '../common/variable.styl'
.x-group-button
  display flex
  justify-content center
  width inherit
  .x-button
    border-radius 0
    overflow visible
    &::after
      border-radius 0
    &:first-child
      &::after
        border-top-left-radius $radius-size-medium
        border-bottom-left-radius $radius-size-medium
    &:last-child
      margin-left -1px
      &::after
        border-top-right-radius $radius-size-medium
        border-bottom-right-radius $radius-size-medium
    &:active
      position relative    
      z-index 1